
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/General_Layout.cshtml";
}

<div class="row my-5 py-5">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h2 class="text-center">Forgot Password</h2>
        <hr />
        <form action="/General/ForgotPassword" method="post">
            <input type="email" name="Email" placeholder="Enter registered Email" required />
            <br />
            <br />
            <button class="btn btn-success" type="submit" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Submit</button>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/General/VerifyOTP" method="Post">
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">OTP</label>
                        <input class="form-control" name="Name" type="text" placeholder="Enter OTP">
                    </div>

                    <div class="modal-footer">
                        <input type="submit" class="btn btn-warning" value="Submit Information">
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>