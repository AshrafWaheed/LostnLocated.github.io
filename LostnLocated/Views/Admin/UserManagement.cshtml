
@{
    ViewBag.Title = "UserManagement";
    Layout = "~/Views/Shared/Admin_Zone_Layout.cshtml";
}
@using LostnLocated.Models
@model IEnumerable<UserMaster>


<style>
    
</style>
<h2 class="text-center my-5"><b>UserManagement</b></h2>

<!--DETAILS START-->
<div class="row" style="background-color: #f7f3e3ff;">
    <div class="col-sm-12 table-responsive-sm">
        <span>@TempData["msg"]</span>
        <table class="table table-hover table-striped">
            <tr style="background-color: #a8763eff;">
                <th style="color:white; font-weight:bold;">S No.</th>
                <th style="color:white; font-weight:bold;">Name</th>
                <th style="color:white; font-weight:bold;">Gender</th>
                <th style="color:white; font-weight:bold;">DOB</th>
                <th  style="color:white; font-weight:bold;">Mobile No</th>
                <th style="color:white; font-weight:bold;">Email Id</th>
                <th style="color:white; font-weight:bold;">Father Name</th>
                <th style="color:white; font-weight:bold;">Current Address</th>
                <th style="color:white; font-weight:bold;">Permanent Address</th>
                <th style="color:white; font-weight:bold;">Registered On</th>
                <th style="color:white; font-weight:bold;">Delete</th>
            </tr>
            @{  int n = 1;
                foreach (UserMaster um in Model)
                {
                        <tr>
                            <th>@n</th>
                            <td>@um.Name</td>
                            <td>@um.Gender</td>
                            <td>@um.DOB</td>
                            <td>@um.MobileNo</td>
                            <td>@um.EmailId</td>
                            <td>@um.FatherName</td>
                            <td>@um.CurrAddress</td>
                            <td>@um.PerAddress</td>
                            <td>@um.RegDate</td>
                            <td>
                                <a href="/Admin/RemoveUser/?uid=@um.EmailId"><i class="fa-solid fa-trash-can" style="cursor:pointer;"></i></a>
                            </td>
                        </tr>
                    n++;
                }
                }

        </table>
    </div>
</div>