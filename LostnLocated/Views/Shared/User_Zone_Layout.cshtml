
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Content/js/code.jquery.com_jquery-3.7.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/fontawesome-free-6.4.2-web/js/all.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">
    <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
    <title>@ViewBag.Title</title>
    
    <style>
        *{
            font-family: 'Ubuntu', sans-serif;
        }
        .bottom-footer {
            text-align: center;
            background-color: black;
        }
        .fnav {
            text-decoration: none;
            color: white;
        }
            .fnav:hover {
                color: #f7f3e3ff;
            }
        .footer-upper {
            border-right: 2px solid white;
        }
        .btn-warning {
            background-color: #6f1a07ff;
            border: none;
            color: white;
            margin-left: 5px;
            margin-right: 5px;
        }

            .btn-warning:hover {
                background-color: #55828bff;
                color: white;
            }
    </style>
</head>

<body>

    <div class="container-fluid">


        <!--------------------------------------NAVBAR---------------------------------------------------------->
        <div class="row header">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#f7f3e3ff;">
                <div class="container-fluid">

                    <span><img src="/Content/images/finalogo.png" width="65" /></span>
                    <b>  @Html.ActionLink("Lost  &  Found", "Index", "General", new { @class = "navbar-brand mx-3", id = "BName", style = "font-size:30px;" }) </b>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ms-auto" style="font-size:18px;">
                            <li class="nav-item">
                                @Html.ActionLink("Dashboard", "Dashboard", "User", new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Post Things", "Index", "User", new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Search Materials", "Search", "User", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Feedback", "Feedback", "User", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Rewards", "Reward", "User", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("MyUploads", "MyUploads", "User", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Settings
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        @Html.ActionLink("Logout", "Logout", "User", new { @class = "dropdown-item" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Change Password", "ChangePassword", "User", new { @class = "dropdown-item" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("My Profile", "MyProfile", "User", new { @class = "dropdown-item" })
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>




        <div class="row" style="min-height:600px;">
            <div class="col-sm-12">

                @RenderBody()
            </div>
        </div>






        <!-----------------Fooooooooooooter--------->
        <!---------------------------FOOOTEEERRRRRR---------------------------------->

        <div class="row py-sm-5" style=" background-color: #6f1a07ff; color: white; ">
            <div class="col-sm-1"></div>
            <div class="col-sm-10" style="text-align:center">
                <div class="row">
                    <div class="col-sm-4 footer-upper">
                        <h4>Quick Links</h4>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                @Html.ActionLink("Dashboard", "Dashboard", "User", new { @class = "fnav" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Post Things", "Index", "User", new { @class = "fnav" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Search Materials", "Search", "User", new { @class = "fnav" })
                            </li>
                            <li>
                                @Html.ActionLink("Feedback", "Feedback", "User", new { @class = "fnav" })
                            </li>
                            <li>
                            @Html.ActionLink("Give Reward", "Reward", "User", new { @class = "fnav" })
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-4 footer-upper">
                        <h4>Registered Address</h4>
                        <p>
                            CHITRAKOOT UTTAR PRADESH - 210204,<br />
                            +9123462349723,<br />
                            kamadgiritrust@gmail.com
                        </p>
                    </div>
                    <div class="col-sm-4">
                        <h4>Actions</h4>

                        @Html.ActionLink("My Profile", "MyProfile", "User", new { @class = "fnav" })&nbsp;|
                        @Html.ActionLink("Logout", "Logout", "User", new { @class = "fnav" }) &nbsp;|
                        @Html.ActionLink("Change Password", "ChangePassword", "User", new { @class = "fnav" })
                        <br /><br />
                        <h4>Social Media</h4>
                        <a href="#" class="fnav"><i class="fa-brands fa-square-facebook ico"></i></a>&emsp;
                        <a href="#" class="fnav"><i class="fa-brands fa-square-instagram ico"></i></a>&emsp;
                        <a href="#" class="fnav"><i class="ico fa-brands fa-square-twitter"></i></a>&emsp;
                        <a href="#" class="fnav"><i class="fa-brands fa-square-youtube ico"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>


        <div class="row bottom-footer">
            <div class="col-sm-6"><a href="https://www.mykss.in/" class="fnav">Copyright &copy; Kamadgiri Trust</a></div>
            <div class="col-sm-6 fnav">Developed By @Html.ActionLink("MCA Students", "Developers", "User", new { @class = "fnav" })</div>
        </div>

    </div>

</body>
</html>
