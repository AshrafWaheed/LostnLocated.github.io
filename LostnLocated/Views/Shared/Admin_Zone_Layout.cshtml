
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Content/js/code.jquery.com_jquery-3.7.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link href="~/Content/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/fontawesome-free-6.4.2-web/js/all.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>

    <style>
        * {
            font-family: 'Ubuntu', sans-serif;
        }

        .bottom-footer {
            text-align: center;
            background-color: black;
        }
        .fnav {
            text-decoration: none;
            color: white;
        }
        .btn-warning {
            background-color: #6f1a07ff;
            border: none;
            color: white;
            margin-left: 5px;
            margin-right: 5px;
        }

            .btn-warning:hover {
                background-color: #55828bff;
                color: white;
            }
    </style>
</head>
<body>


    <!-----------------------NAVBAR----------------------------------------------->


    <div class="container-fluid">


        <!--------------------------------------NAVBAR---------------------------------------------------------->
        <div class="row header">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#f7f3e3ff;">
                <div class="container-fluid">

                    <span><img src="/Content/images/finalogo.png" width="65" /></span>
                    <b>  @Html.ActionLink("Lost  &  Found", "Index", "General", new { @class = "navbar-brand mx-3", id = "BName", style = "font-size:30px;" }) </b>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                @Html.ActionLink("Dashboard", "Dashboard", "Admin", new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Users", "UserManagement", "Admin", new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Enquiry", "EnquiryManagement", "Admin", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Events", "EventManagement", "Admin", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Feedback", "FeedbackManagement", "Admin", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("View All Posts", "ViewLF", "Admin", new { @class = "nav-link", id = "navlink" })
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Settings
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        @Html.ActionLink("Logout", "Logout", "Admin", new { @class = "dropdown-item" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Change Password", "ChangePassword", "Admin", new { @class = "dropdown-item" })
                                    </li>

                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>



        
        <div class="row" style="min-height:700px;">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>



       



        <!-----------------Fooooooooooooter--------->

        <div class="row bottom-footer">
            <div class="col-sm-6"><a href="https://www.mykss.in/" class="fnav">Copyright &copy; Kamadgiri Trust</a></div>
            <div class="col-sm-6 fnav">Developed By @Html.ActionLink("MCA Students", "Developers", "Admin", new { @class = "fnav" })</div>
        </div>

    </div>


</body>
</html>
